<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConteoFragment">
    <TextView
        android:layout_width="85pt"
        android:text="Ubicación: "
        android:textColor="@android:color/black"
        android:layout_gravity="left"
        android:textSize="25dp"
        android:layout_height="20pt"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"/>
    <EditText
        android:id="@+id/ubicacion3"
        android:layout_width="75pt"
        android:textColor="@android:color/black"
        android:layout_gravity="left"
        android:layout_height="25pt"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="200dp"/>
    <TextView
        android:layout_width="85pt"
        android:text="Materia Prima: "
        android:textColor="@android:color/black"
        android:layout_gravity="left"
        android:textSize="25dp"
        android:layout_height="20pt"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="5dp"/>
    <EditText
        android:id="@+id/matpri3"
        android:layout_width="75pt"
        android:textColor="@android:color/black"
        android:layout_gravity="left"
        android:layout_height="25pt"
        android:textSize="20dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="200dp"/>
    <TextView
        android:layout_width="85pt"
        android:layout_height="20pt"
        android:text="No. Lote: "
        android:textColor="@android:color/black"
        android:layout_gravity="left"
        android:textSize="25dp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="5dp"/>
    <EditText
        android:id="@+id/lote3"
        android:layout_width="75pt"
        android:textColor="@android:color/black"
        android:layout_gravity="left"
        android:layout_height="25pt"
        android:textSize="20dp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="200dp"/>
    <TextView
        android:layout_width="85pt"
        android:layout_height="20pt"
        android:text="Cantidad: "
        android:textColor="@android:color/black"
        android:layout_gravity="left"
        android:textSize="25dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="5dp"/>
    <EditText
        android:id="@+id/cantidad3"
        android:layout_width="75pt"
        android:textColor="@android:color/black"
        android:layout_gravity="left"
        android:layout_height="25pt"
        android:textSize="20dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="200dp"/>
    <Button
        android:id="@+id/b1"
        android:layout_width="80pt"
        android:layout_height="20pt"
        android:layout_gravity="left"
        android:layout_marginTop="300dp"
        android:text="Agregar otra MP"
        android:layout_marginLeft="10dp"/>
    <Button
        android:id="@+id/b2"
        android:layout_width="80pt"
        android:layout_height="20pt"
        android:layout_gravity="right"
        android:layout_marginTop="300dp"
        android:text="Terminar Ubicación"
        android:layout_marginRight="10dp"/>
</FrameLayout>